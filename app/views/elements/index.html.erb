<p id="notice"><%= notice %></p>

<h1>Availabe Collections</h1>
<br>
<table class="table-striped">
  <thead>
    <tr>
      <th>Song</th>
      <th>Movie</th>
      <th>Lyric</th>
      <th>Likes<th>
    </tr>
  </thead>

  <tbody>
    <% @elements.each do |element| %>
      <tr>
        <td><%= element.song %></td>
        <td><%= element.movie %></td>
        <td class="btn btn-default btn-xs" role="button"><%= link_to 'Show', element %></td>
        <td class="btn btn-default btn-xs" role="button"><%= link_to 'Edit', edit_element_path(element) %></td>
        <td class="btn btn-default btn-xs" role="button"><%= link_to 'Destroy', element, method: :delete, data: { confirm: 'Are you sure?' } %></td>     
        <td><%= pluralize(element.votes.count, "like") %></td>
        <td><%= link_to image_tag("like.png", :height => 20, :width => 20), upvote_element_path(element), method: :post %></td>
        <td><%= link_to image_tag("unlike.png", :height => 20, :width => 20), downvote_element_path(element), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-default btn-lg active btn-sm" role="button"><%= link_to 'Add New Lyric', new_element_path %></div>